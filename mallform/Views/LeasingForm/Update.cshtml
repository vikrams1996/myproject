@model mallform.Models.Tenant
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "LeasingForm", FormMethod.Post))
{

    @Html.HiddenFor(x => x.Id)

    <label>
        ShopName
    </label>

    @Html.TextBoxFor(m=>m.shopName , new { @class = "form-control"})

    <label>
        BrandName
    </label>
    @Html.TextBoxFor(m=>m.brandName , new { @class ="form-control"})

    <label>
        Address
    </label>

    @Html.TextBoxFor(m => m.Address, new { @class = "form-control " })

    <label>
        Mobile No
    </label>

    @Html.TextBoxFor(m => m.mobileNo, new { @class = "form-control" })

    <label>
        Pan No
    </label>

    @Html.TextBoxFor(m => m.panNo, new { @class = "form-control " })


   <button type="submit" class="btn btn-primary">Save</button>
}